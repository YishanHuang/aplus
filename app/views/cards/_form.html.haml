= form_for @card, url: @url do |f|
  - if @errors
    #error_explanation
      %h2= "#{pluralize(@errors, "error")} prohibited this card from being saved:"
      %ul
        - @errors.each do |msg|
          %li= msg
          
  .field
    = f.label :question
    = f.text_area :question
  .field
    = f.label :answer
    = f.text_area :answer
  .actions
    - if @url[/cards\/[0-9]/]
      = f.submit 'Save'
    - else
      = f.submit 'Continue'
