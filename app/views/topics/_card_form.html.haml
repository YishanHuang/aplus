= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.text_field :topic_id, type: 'hidden', value: @topic._id
  .field
    = f.label :question
    = f.text_area :question
  .field
    = f.label :answer
    = f.text_area :answer
  .actions
    = f.submit 'Done'
  .actions
    = f.submit 'Continue'
