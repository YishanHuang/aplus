%p#notice= notice

.title
  %h1= @topic.title
  %span= link_to 'Edit topic', edit_topic_path(@topic)
  %span= link_to 'New Card', new_topic_card_path(@topic)
  %span= link_to 'Back', topics_path
  %span= link_to 'Destroy', @topic, :method => :delete, :data => { :confirm => 'Are you sure?' }

= form_tag("/topics/#{@topic._id}/set_review", method: "post") do
  = submit_tag('Set review')

= form_tag("/topics/#{@topic._id}/reset_cards", method: "post") do
  = submit_tag('Reset')

%h3 Review boxes

%ul
  - if @box_has_cards[0]
    %li= link_to 'Box 1', topic_review_box_path(@topic._id, b: 1, reset: 'y')
  - else
    %li Box 1
  - if @box_has_cards[1]
    %li= link_to 'Box 2', topic_review_box_path(@topic._id, b: 2, reset: 'y')
  - else
    %li Box 2
  - if @box_has_cards[2]
    %li= link_to 'Box 3', topic_review_box_path(@topic._id, b: 3, reset: 'y')
  - else
    %li Box 3

%p= link_to 'List cards', topic_cards_path(@topic)
